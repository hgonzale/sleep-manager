# Sleep Manager configuration (TOML)
# Both machines should use the same config content.
# The only difference should be common.role ("waker" or "sleeper").

[common]
domain = "localdomain"
port = 51339
default_request_timeout = 4
api_key = "your-secure-api-key-here"
role = "waker"

[waker]
name = "waker_url"
wol_exec = "/usr/sbin/etherwake"

[sleeper]
name = "sleeper_url"
mac_address = "aa:bb:cc:dd:ee:ff"
systemctl_command = "/usr/bin/systemctl"
suspend_verb = "suspend"
status_verb = "is-system-running"
